<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="2sp"
                android:paddingRight="2sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="Your Details"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Name"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/name"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edittext_bg"
                    android:layout_height="40sp"
                    android:layout_width="match_parent"
                    android:paddingLeft="10sp"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Name*"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/lname"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edittext_bg"
                    android:layout_height="40sp"
                    android:layout_width="match_parent"
                    android:paddingLeft="10sp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Personalemail"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Personalemail"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:layout_height="40sp"
                    android:paddingLeft="10sp"
                    android:layout_marginTop="5sp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Mobileno"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Mobileno"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:layout_height="40sp"
                    android:paddingLeft="10sp"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:layout_marginTop="5sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender*"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5sp"
                    android:paddingLeft="10sp"
                    android:background="@drawable/edittext_bg"
                    android:layout_height="40sp"
                    android:drawableTint="@color/darkblack"
                    android:drawableRight="@drawable/ic_edit"
                    android:entries="@array/gender"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Designation"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Designation"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5sp"
                    android:paddingLeft="10sp"
                    android:background="@drawable/edittext_bg"
                    android:layout_height="40sp"
                    android:singleLine="true"/>

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/buttonround"
                    android:textColor="#ffffff"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/f2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="2sp"
                android:paddingRight="2sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Details"
                    android:textColor="@color/black"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/Comapanyname"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Companyname"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginTop="5sp"
                    android:layout_height="40sp"
                    android:paddingLeft="10sp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/Comapanyno"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Comapanyno"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/edittext_bg"
                    android:inputType="number"
                    android:layout_height="40sp"
                    android:paddingLeft="10sp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/Companyemail"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/comemail"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginTop="5sp"
                    android:layout_height="40sp"
                    android:paddingLeft="10sp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/Companyaddress"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Companyaddress"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:layout_height="40sp"
                    android:layout_marginTop="5sp"
                    android:paddingLeft="10sp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/Companywebsite"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Companywebsite"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:layout_height="40sp"
                    android:singleLine="true"
                    android:paddingLeft="10sp"
                    android:layout_marginTop="5sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <Button
                        android:id="@+id/previous1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="Previous"
                        android:layout_weight="1"
                        android:background="@drawable/buttonround"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="10sp"/>
                    <Button
                        android:id="@+id/next1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="Next"
                        android:layout_weight="1"
                        android:background="@drawable/buttonround"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="10sp"/>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/f3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="2sp"
                android:paddingRight="2sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/Country"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/Country"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_bg"
                android:layout_height="40sp"
                android:layout_marginTop="5sp"
                android:editable="false"
                android:drawableTint="@color/darkblack"
                android:drawableRight="@drawable/ic_edit"
                android:paddingLeft="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/State"

                android:textColor="@color/black" />

            <EditText
                android:id="@+id/State"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_bg"
                android:layout_height="40sp"
                android:paddingLeft="10sp"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_marginTop="5sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/City"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/City"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_bg"
                android:layout_height="40sp"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_marginTop="5sp"
                android:paddingLeft="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/Postalcode"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/Postalcode"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_bg"
                android:layout_height="40sp"
                android:paddingLeft="10sp"
                android:layout_marginTop="5sp"
                android:singleLine="true"
                android:inputType="number"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <Button
                    android:id="@+id/previous2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Previous"
                    android:layout_weight="1"
                    android:background="@drawable/buttonround"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="10sp"/>
                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Submit"
                    android:layout_weight="1"
                    android:background="@drawable/buttonround"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="10sp"/>
            </LinearLayout></LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>